{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "es6",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // if using webpack 2+ or rollup, to leverage tree shaking:
    "module": "commonjs",
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noResolve": false,
    "allowJs": true, /* REMOVE when jsfiles are gone */
    "baseUrl": "src/bot",
    "paths": {
      "@config": ["../../config.json", "../../data/config.example.json"]
    },
    "outDir": "../../dest",
    "sourceMap": true,
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "../../d.ts/types.d.ts",
    "../../d.ts/*",
  ],
  "exclude": [
  ]
}