{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "module": "esnext",
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noResolve": false,
    "allowJs": true,
    "baseUrl": "src/bot",
    "paths": {
      "@config": ["../../config.json", "../../data/config.example.json"]
    },
    "outDir": "../../dest",
    "inlineSourceMap": true
  },
  "include": [
    "./",
    "../../d.ts/types.d.ts",
    "../../d.ts/*"
  ],
  "exclude": [
    "node_modules"
  ]
}