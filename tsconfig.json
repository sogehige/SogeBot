{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "module": "esnext",
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noResolve": false,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@config": ["config.json", "src/bot/data/config.example.json"]
    },
    "sourceMap": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.vue",
    "d.ts/*",
    "tools/*",
    "test/**/*"
  ],
  "exclude": [
    "src/bot",
    "node_modules",
    "config.json"
  ]
}