{
  "compilerOptions": {
    "target": "es6",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "module": "commonjs",
    "incremental": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noResolve": false,
    "allowJs": true, /* REMOVE when jsfiles are gone */
    "baseUrl": "src/bot",
    "paths": {
      "@config": ["../../config.json", "../../data/config.example.json"],
      "@ormconfig": ["../../ormconfig.json", "../..//data/ormconfig.sqlite.json"]
    },
    "outDir": "../../dest",
    "inlineSourceMap": true,
  },
  "include": [
    "./",
    "../../d.ts/types.d.ts",
    "../../d.ts/*",
  ],
  "exclude": [
    "node_modules",
  ]
}